<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="412dp"
        android:layout_height="51dp"
        android:background="#34CB8E"
        android:foreground="#00FFFFFF"
        android:gravity="center_horizontal"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="413dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/sunshine_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <View
        android:id="@+id/sunshine_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/humidity_view"
        app:layout_constraintEnd_toStartOf="@+id/temperature_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sunshine_text"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:text="일조량"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/sunshine_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sunshine_view" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/sunshine_gauge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/onButton"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:gaugeEndValue="1000"
        app:gaugePointEndColor="@android:color/background_light"
        app:gaugePointStartColor="@android:color/holo_orange_light"
        app:gaugeStartAngle="135"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@android:color/darker_gray"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="270"
        app:layout_constraintBottom_toBottomOf="@+id/sunshine_view"
        app:layout_constraintEnd_toEndOf="@+id/sunshine_view"
        app:layout_constraintStart_toStartOf="@+id/sunshine_view"
        app:layout_constraintTop_toBottomOf="@+id/sunshine_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sunshine_textView"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/sunshine_gauge"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sunshine_gauge"
        app:layout_constraintEnd_toEndOf="@+id/sunshine_view"
        app:layout_constraintStart_toStartOf="@+id/sunshine_view" />

    <View
        android:id="@+id/temperature_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/coolant_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sunshine_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temperature_text"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:gravity="center_horizontal"
        android:text="온도"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sunshine_view"
        app:layout_constraintTop_toTopOf="@+id/temperature_view" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/temperature_gauge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/onButton"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@android:color/holo_red_dark"
        app:gaugePointStartColor="@android:color/holo_orange_dark"
        app:gaugeStartAngle="135"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@android:color/darker_gray"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="270"
        app:layout_constraintBottom_toBottomOf="@+id/temperature_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/sunshine_view"
        app:layout_constraintTop_toBottomOf="@+id/temperature_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/temperature_textView"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/sunshine_gauge"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/temperature_gauge"
        app:layout_constraintEnd_toEndOf="@+id/temperature_view"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/sunshine_view" />

    <View
        android:id="@+id/humidity_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/coolant_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sunshine_view" />

    <TextView
        android:id="@+id/humidity_text"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:gravity="center_horizontal"
        android:text="습도"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/humidity_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sunshine_view" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/humidity_gauge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/onButton"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:gaugeDividerDrawFirst="false"
        app:gaugeDividerDrawLast="false"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/design_default_color_primary_variant"
        app:gaugePointStartColor="@android:color/holo_blue_bright"
        app:gaugeStartAngle="135"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@android:color/darker_gray"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="270"
        app:layout_constraintBottom_toBottomOf="@+id/humidity_view"
        app:layout_constraintEnd_toEndOf="@+id/humidity_view"
        app:layout_constraintStart_toStartOf="@+id/humidity_view"
        app:layout_constraintTop_toBottomOf="@+id/humidity_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/humidity_textView"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/sunshine_gauge"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/humidity_gauge"
        app:layout_constraintEnd_toEndOf="@+id/humidity_view"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/humidity_view" />

    <View
        android:id="@+id/coolant_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/humidity_view"
        app:layout_constraintTop_toBottomOf="@+id/temperature_view" />

    <TextView
        android:id="@+id/coolant_text"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:text="냉각수"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/coolant_view"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/coolant_view"
        app:layout_constraintTop_toBottomOf="@+id/temperature_view" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/coolant_gauge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/onButton"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/white"
        app:gaugePointStartColor="@color/teal_700"
        app:gaugeStartAngle="135"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@android:color/darker_gray"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="270"
        app:layout_constraintBottom_toBottomOf="@+id/coolant_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/humidity_view"
        app:layout_constraintTop_toBottomOf="@+id/coolant_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/coolant_textView"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/sunshine_gauge"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/coolant_gauge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/humidity_view" />

    <ImageButton
        android:id="@+id/onButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="79dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/oniot_reverse" />

    <Button
        android:id="@+id/lineButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:text="Line"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/dataButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        android:text="Data"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>